{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "checkJs": false,
    "strict": true
  },
  "include": ["src", "index.html", "src/types"],
  "exclude": ["dist", "node_modules", "scripts", "reference-original"]
}
