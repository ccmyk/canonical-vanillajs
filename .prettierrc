{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "plugins": ["prettier-plugin-glsl"],
  "overrides": [
    {
      "files": ["*.glsl", "*.vert", "*.frag"],
      "options": {
        "parser": "glsl"
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}